      <div class="shot"></div>
      <div class="shot"></div>
      <div class="score"></div>
    </div>
    <div class="bowling-cell frame" data-frame="3">
      <div class="shot"></div>
      <div class="shot"></div>
      <div class="score"></div>
    </div>
    <div class="bowling-cell frame" data-frame="4">
      <div class="shot"></div>
