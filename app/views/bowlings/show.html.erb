<% 4.times do |t| %>
  <div class="bowling-table bowler" data-bowler="<%= t + 1 %>" data-current-frame="1">
    <div class="bowling-cell name"></div>
    <div class="bowling-cell frame" data-frame="1">
      <div class="shot"></div>
      <div class="shot"></div>
      <div class="score"></div>
    </div>
