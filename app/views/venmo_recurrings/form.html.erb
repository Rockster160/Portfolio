<div class="skinny-container">
  <div class="btn-container">
    <a href="<%= venmo_recurrings_path %>" class="btn">&larr; All Venmo</a>
    <a href="<%= logout_path %>" class="btn pull-right">Logout</a>
  </div>
  <%= form_for @venmo do |f| %>
    <div class="form-title">New Venmo</div>

    <%= render partial: 'layouts/error_container', locals: { resource: @venmo } %>

    <div class="form-fields">
      <div class="form-field">
        <div class="checkbox-wrapper">
          <%= f.check_box :active %>
          <%= f.label :active do %>
            <div class="checkbox-placeholder"></div> Active?
          <% end %>
        </div>
      </div>

      <div class="form-field">
        <%= f.label :to %>
        <%= f.text_field :to, value: @venmo.to, disabled: true %>
      </div>

      <div class="form-field">
        <%= f.label :from %>
        <%= f.text_field :from %>
      </div>

      <div class="form-field">
        <%= f.label :day_of_month %>
        <%= f.text_field :day_of_month %>
      </div>

      <div class="form-field">
        <%= f.label :hour_of_day %>
        <%= f.text_field :hour_of_day %>
      </div>

      <div class="form-field">
        <%= f.label :amount_cents %>
        <%= f.text_field :amount_cents %>
      </div>

      <div class="form-field">
        <%= f.label :note %>
        <%= f.text_field :note %>
      </div>
    </div>

    <div class="form-submission">
      <%= f.submit %>
    </div>
  <% end %>
</div>
