<div class="skinny-container">
  <div class="btn-container">
    <a href="<%= folders_path %>" class="btn">&larr; All Folders</a>
    <a data-clickit="input[type=submit]" class="btn pull-right">Save</a>
  </div>
  <%= form_for @folder do |f| %>
    <div class="form-title"><%= @folder.persisted? ? :Edit : :New %> Folder</div>

    <%= render partial: "layouts/error_container", locals: { resource: @folder } %>

    <%= f.hidden_field :folder_id, value: params[:folder] %>
    <div class="form-fields">
      <div class="form-field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-field">
        <%= f.label :tag_strings, "Tags (Comma separated)" %>
        <%= f.text_field :tag_strings %>
      </div>
    </div>

    <div class="form-submission">
      <%= f.submit %>
    </div>
  <% end %>
</div>
