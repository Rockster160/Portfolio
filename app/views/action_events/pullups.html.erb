<% content_for(:head) do %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<% end %>

<%= form_tag nil, method: :get, enforce_utf8: false, authenticity_token: false do |f| %>
  <input type="text" name="q" value="<%= params[:q] %>" placeholder="Filter">
<% end %>

<div class="text-center" style="margin: 20px 0;">
  <%= link_to "< Prev month", params.permit!.except(:action, :controller).merge(date: @date - 1.month) %>
  - <%= link_to "Today", params.permit!.except(:action, :controller, :date) %> -
  <%= link_to "Next month >", params.permit!.except(:action, :controller).merge(date: @date + 1.month) %>
</div>

<div class="text-center">
  <%= @stats[:current] %><small>/<%= @stats[:goal] %></small> | <%= @stats[:remaining] %>r | <%= @stats[:daily_need].round(1) %>d
</div>
<div class="pullups-charts" data-pullups-data="<%= @chart_data.to_json %>"></div>
