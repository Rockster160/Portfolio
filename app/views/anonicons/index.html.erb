<%= meta_title "Anonicon #{@anonicon_source}" %>
<%= meta_description "Anonicon generated for #{@anonicon_source}" %>
<% content_for(:meta) do %>
  <% path = "#{anonicons_url}/#{@anonicon_source}.png" %>
  <meta name="twitter:image" content="<%= path %>">
  <meta name="og:image" content="<%= path %>">
  <meta name="image" content="<%= path %>">
<% end %>

<div class="skinny-container">
  <%= form_tag anonicons_path, id: "anonicon-form" do |f| %>
    <div class="form-title">
      Anonicon
    </div>

    <%= render partial: 'layouts/error_container', locals: { resource: @user } %>

    <div class="form-fields">
      <div class="form-field">
        <%= label_tag :id do %>
          String to Anonify
          <a href="#" class="btn pull-right random-anonicon">Random</a>
        <% end %>
        <%= text_field_tag :id, @anonicon_source, class: "anon-identifier" %>
      </div>
    </div>

    <div class="form-submission">
      <%= submit_tag "Anonify!" %>
    </div>

    <p class="text-center">Your Anonicon:</p>

    <div class="anonicon-container text-center">
      <%= render partial: "show" %>
    </div>
  <% end %>
</div>
