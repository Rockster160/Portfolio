<% content_for :head do %>
  <script src="//maps.google.com/maps/api/js?v=3.23&key=<%= ENV['PORTFOLIO_GMAPS_KEY'] %>"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<% end %>

<div class="map-page">
  <div class="skinny-container">
    <div class="error-container" style="color: red"></div>
    <div class="location-options">
      <div class="location-btn"><i class="fa fa-location-arrow"></i></div>
      <input type="text" name="loc" id="location-field" placeholder="Enter address/Coordinate">
      <div class="search-btn">Search</div>
    </div>
  </div>
  <div class="map-container">
    <div id="map"></div>
  </div>
</div>
