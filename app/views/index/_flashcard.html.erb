<% if is_read == true %>
  <%= link_to "Edit", flashcard_path(type: "edit", old: card), remote: true, class: "btn btn-updateJS" %>
  <%= link_to "New", flashcard_path(type: "new", old: card), remote: true, class: "btn btn-updateJS" %>
  <div class="flashcard-container">
    <div id="flashCard" class="card">
      <div class="front face">
        <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
        <div id="flashcard-title" class="flashcard-class" style="padding-top:4px;">
          <%= card.title %>
        </div>
        <% 8.times do |row| %>
          <div>
            <% if card.line[row][1] == "0" %>
              <div id="flashcard-line" class="flashcard-class" style="margin:2px 0;">
                <%= card.line[row][0] %>
              </div> <!-- flashcard-line -->
            <% else %>
              <div id="flashcard-line" class="flashcard-class center" style="margin:2px 0;">
                <%= card.line[row][0] %>
              </div> <!-- flashcard-line -->
            <% end %>
          </div> <!--  -->
        <% end %>
      </div> <!-- front -->
      <div class="back face">
        <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
        <div class="back-body flashcard-class">
          <%= card.body %>
        </div>
      </div> <!-- back -->
    </div> <!-- flashCard -->
  </div> <!-- container -->

<% else %>

  <%= form_for(@card, url: flashcard_path, remote: true) do |f| %>
    <% if card.id == -1 %>
      <%= link_to "Save", "", remote: true, class: "btn btn-disabled btn-updateJS" %>
      <%= link_to "Delete", "", remote: true, class: "btn btn-disabled btn-updateJS" %>
    <% else %>
      <%#= f.submit "Save", class: "btn btn-updateJS" %>
      <%= link_to "Save", flashcard_path(type: "save", old: card), remote: true, class: "btn btn-updateJS", name: "helloworld" %>
      <%= link_to "Delete", flashcard_path(type: "delete", old: card), remote: true, class: "btn btn-updateJS" %>
    <% end %>
    <div class="flashcard-container">
      <div id="flashCard" class="card">
        <div class="front face">
          <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
          <%= f.text_field :title, id: "flashcard-title", class: "flashcard-class", value: card.title %>
          <% 8.times do |row| %>
            <div>
              <%= link_to "(c)", "", remote: true, class: "btn flashcard-btn center-btn" %>
              <% if card.line[row][1] == "0" %>
                <%= f.text_field @card.line[row][0], id: "flashcard-line", class: "flashcard-class", value: card.line[row][0] %>
              <% else %>
                <%= f.text_field @card.line[row][0], id: "flashcard-line", class: "flashcard-class center", value: card.line[row][0] %>
              <% end %>
            </div> <!--  -->
          <% end %>
        </div> <!-- front -->
        <div class="back face">
          <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
          <div class="back-body flashcard-class">
            <%= f.text_area :body, id: "back-textbox-id", class: "back-textbox", rows: "12", cols: "48", placeholder: card.body %>
          </div>
        </div> <!-- back -->
      </div> <!-- flashCard -->
    </div> <!-- container -->
  <% end %>

<% end %>
