<% if is_read == true %>
  <%= link_to "Edit", flashcard_path(type: "edit", old: @card), remote: true, class: "btn" %>
  <%= link_to "New", flashcard_path(type: "new", old: @card), remote: true, class: "btn" %>
<% else %>
  <% if card.id == 0 %>
    <%= link_to "Save", "", remote: true, class: "btn btn-disabled" %>
    <%= link_to "Delete", "", remote: true, class: "btn btn-disabled" %>
  <% else %>
    <%= link_to "Save", flashcard_path(type: "save"), remote: true, class: "btn" %>
    <%= link_to "Delete", flashcard_path(type: "delete"), remote: true, class: "btn" %>
  <% end %>
<% end %>
<div class="flashcard-container">
<%#= form_for(card, remote: true) do |f| %>
  <div id="flashCard" class="card">
    <div class="front face">
      <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
        <% if is_read == true %>
          <div id="flashcard-title" class="flashcard-class" style="padding-top:4px;">
            <%= card.title %>
          </div>
        <% else %>
          <input type="text" id="flashcard-title" class="flashcard-class" value="<%= card.title %>">
        <% end %>
      <% 8.times do |row| %>
        <div>
          <% if is_read == true %>
<% if card.line[row][1] == "0" %>
              <div id="flashcard-line" class="flashcard-class" style="margin:2px 0;">
<% else %>
              <div id="flashcard-line" class="flashcard-class center" style="margin:2px 0;">
<% end %>
                <%= card.line[row][0] %>
              </div> <!-- flashcard-line -->
          <% else %>
            <%= link_to "(c)", "", remote: true, class: "btn flashcard-btn center-btn" %>
            <% if card.line[row][1] == "0" %>
              <input type="text" id="flashcard-line" class="flashcard-class" value="<%= card.line[row][0] %>">
            <% else %>
              <input type="text" id="flashcard-line" class="flashcard-class center" value="<%= card.line[row][0] %>">
            <% end %>
          <% end %>
        </div> <!--  -->
      <% end %>
    </div> <!-- front -->
    <div class="back face">
      <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn" %>
      <div class="back-body flashcard-class">
        <% if is_read == true %>
          <%= card.body %>
        <% else %>
          <textarea cols="48" rows="12" class="back-textbox" id="back-textbox-id">
            <%= card.body %>
          </textarea>
        <% end %>
      </div>
    </div> <!-- back -->
  </div> <!-- flashCard -->
<%# end %>
</div> <!-- container -->
