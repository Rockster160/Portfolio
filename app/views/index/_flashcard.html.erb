<% if is_read == true %>

  <%= link_to "Edit", flashcard_path(type: "edit", old: card.id), remote: true, class: "btn" %>
  <%= link_to "New", flashcard_path(type: "new", old: card.id), remote: true, class: "btn" %>
  <%#= link_to "<", flashcard_path(type: "back", old: card.id, status: is_read), remote: true, class: "btn" %>
  <a href="flashcard/back/<%= card.id %>?status=<%= is_read %>" id="back-btn" class="btn" data-remote="true"><</a>
  <span id="id_number"><%= @card_num %></span>
  <%#= link_to ">", flashcard_path(type: "next", old: card.id, status: is_read), remote: true, class: "btn" %>
  <a href="flashcard/next/<%= card.id %>?status=<%= is_read %>" id="next-btn" class="btn" data-remote="true">></a>
  <div class="flashcard-container">
    <div id="flashCard" class="card">
      <div class="front face">
        <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn", id: "flip-test" %>
        <div id="flashcard-title" class="flashcard-class flashcard-read-title" style="padding-top:4px;">
          <%= card.title %>
        </div>
        <div id="flashcard-lines">
          <%= render 'flashcard_lines', card: card, is_read: is_read %>
        </div>
      </div> <!-- front -->
      <div class="back face">
        <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn", id: "flip-test" %>
        <div id="flashcard-body" class="back-body flashcard-class">
          <%= card.body %>
        </div>
      </div> <!-- back -->
    </div> <!-- flashCard -->
  </div> <!-- container -->

<% else %>

  <%= form_for(@card, remote: true) do |f| %>
    <% if card.id == -1 %>
      <%= link_to "Save", "", remote: true, class: "btn btn-disabled" %>
      <%= link_to "Delete", "", remote: true, class: "btn btn-disabled" %>
    <% else %>
      <%= f.submit "Save", class: "btn" %>
      <%#= link_to "Save", flashcard_path(type: "save", old: card), remote: true, class: "btn" %>
      <%= link_to "Delete", flashcard_path(type: "delete", old: card, status: is_read), remote: true, class: "btn" %>
    <% end %>
    <div class="flashcard-container">
      <div id="flashCard" class="card">
        <div class="front face">
          <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn", id: "flip-test" %>
          <%= f.text_field :title, id: "flashcard-title", class: "flashcard-class flashcard-edit-title", value: card.title %>
          <div id="flashcard-lines">
            <%= render 'flashcard_lines', card: card, is_read: is_read, f: f %>
          </div><!-- flashcard-lines -->
        </div> <!-- front -->
        <div class="back face">
          <%= link_to "v^", "", remote: true, class: "btn flashcard-btn jsflip-btn", id: "flip-test" %>
          <div class="back-body flashcard-class">
            <%= f.text_area :body, id: "back-textbox-id", class: "back-textbox", rows: "12", cols: "48", placeholder: card.body %>
          </div><!-- back-body -->
        </div> <!-- back face -->
      </div> <!-- flashCard -->
    </div> <!-- container -->
  <% end %>

<% end %>
