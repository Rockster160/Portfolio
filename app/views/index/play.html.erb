<div id="flashcard-holder">
  <div id="flashcards">
    <div id="options">
      <div id="textfields">
        <input type="password" name="pin" maxlength="4" size="2" placeholder=" PIN">
        <input type="text" name="batch" placeholder=" Search by:"></br>
      </div> <!-- textfields -->
      <input type="checkbox" name="searchable" value="batch"> Batch
      <input type="checkbox" name="searchable" value="title"> Title</br>
      <input type="checkbox" name="searchable" value="body"> Body
      <input type="checkbox" name="searchable" value="type" disabled="disabled"> <span style="color: gray;">Type</span></br>
    </div> <!-- options -->
    <div id="searchResults">
      <div id="left"></div>
      <hr width="1" size="130">
      <div id="right"></div>
    </div> <!-- searchResults -->
    <div id="flashcard-placeholder">
      <%= render "flashcard", :card => @card, :is_read => @read %>
    </div>
  </div> <!-- flashcards -->
</div>

