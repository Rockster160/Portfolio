<%= content_for(:title) { "Climbs" } %>

<div class="skinny-container">
  <div class="btn-container text-right">
    <%= form_for @climb, html: { class: "basic" } do |f| %>
      <div class="flex-fields">
        <%= f.submit "Save Climb", class: "btn" %>
        <% Time.use_zone("Mountain Time (US & Canada)") do %>
          <% f.object.timestamp ||= Time.current %>
          <%= f.datetime_local_field :timestamp %>
        <% end %>
        <%= f.hidden_field :data %>
      </div>
    <% end %>
  </div>
</div>

<div class="output">
  <% @climb.data&.split(" ")&.each do |go| %>
    <span score="<%= @climb.score_for(go) %>"><%= go %></span>
  <% end %>
</div>

<div class="full-score"><%= @climb.score %></div>

<div class="keypad-wrapper">
  <div class="keypad-entry">
    <div class="numpad-key" score="0.5">0</div>
    <div class="numpad-key" score="1">1</div>
    <div class="numpad-key" score="2">2</div>
    <div class="numpad-key" score="3">3</div>
    <div class="numpad-key" score="4">4</div>
    <div class="numpad-key" score="5">5</div>
    <div class="numpad-key" score="6">6</div>
    <div class="numpad-key" score="7">7</div>
    <div class="numpad-key" score="8">8</div>
    <div class="numpad-key" score="9">9</div>
    <div class="numpad-key" score="10">10</div>
    <div class="numpad-key">&lt;&lt;</div>
  </div>
</div>
