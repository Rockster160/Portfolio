<% content_for :modals do %>
  <div class="modal modal-wrapper hidden <%= additional_classes %>" id="<%= id %>" tabindex="-1">
    <div class="modal-content app-card-container">
      <div class="app-card-title">
        <%= title %>
        <a href="" class="close-btn" data-dismiss="#<%= id %>"><i class="fa fa-times-circle-o fa-2x"></i></a>
      </div>
      <div class="app-card-body">
        <div class="app-card-inner">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
