<div class="calc-container">
  <div class="screen-wrapper">
    <div class="prev">
      <div class="num"></div>
      <div class="op"></div>
    </div>
    <div class="clipboard hidden">
      <%= svg "clipboard-regular" %>
      <span></span>
    </div>
    <input class="screen" type="text" placeholder="0">
  </div>

  <div class="controls">
    <div class="row">
      <div class="btn" data-clear="C">C</div>
      <div class="btn" data-del="del">del</div>
    </div>

    <div class="btn" data-op="^">x^y</div>
    <div class="btn" data-op="√">√</div>
    <div class="btn" data-replace="3.141592653589793">π</div>
    <div class="btn" data-square="x^2">x^2</div>
    <div class="btn incomplete" data-frac="frac">[] / []</div>

    <div class="btn incomplete" data-todoooo="ft">ft</div>
    <div class="btn incomplete" data-todoooo="in">in</div>
    <div class="btn incomplete" data-todoooo="acre">acre</div>
    <div class="btn incomplete" data-todoooo="ft^2">ft^2</div>
    <div class="btn incomplete" data-todoooo="in^2">in^2</div>

    <div class="btn" data-cp="cp">copy</div>
    <div class="btn" data-enter="7">7</div>
    <div class="btn" data-enter="8">8</div>
    <div class="btn" data-enter="9">9</div>
    <div class="btn" data-op="÷">÷</div>

    <div class="btn" data-pst="pst">paste</div>
    <div class="btn" data-enter="4">4</div>
    <div class="btn" data-enter="5">5</div>
    <div class="btn" data-enter="6">6</div>
    <div class="btn" data-op="×">×</div>

    <div class="btn" data-plmn="±">±</div>
    <div class="btn" data-enter="1">1</div>
    <div class="btn" data-enter="2">2</div>
    <div class="btn" data-enter="3">3</div>
    <div class="btn" data-op="-">-</div>

    <div class="btn incomplete" data-todoooo="--"></div>
    <div class="btn" data-enter="0">0</div>
    <div class="btn" data-enter=".">.</div>
    <div class="btn" data-eq="=">=</div>
    <div class="btn" data-op="+">+</div>
  </div>
</div>
