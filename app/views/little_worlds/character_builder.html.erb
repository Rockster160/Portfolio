<% content_for :head do %>
  <%= javascript_include_tag 'support/pathfinding.js' %>
<% end %>

<ul class="instructions">
  <li>Arrow keys to move/change direction</li>
  <li><strong>A</strong> - Spell</li>
  <li><strong>S</strong> - Jab</li>
  <li><strong>D</strong> - Slash</li>
  <li><strong>F</strong> - Shoot</li>
  <li><strong>G</strong> - Die</li>
  <li><strong>X</strong> - cancel all queued movements</li>
</ul>

<div class="split-container">
  <div class="half-container character-form" data-change-url="<%= change_clothes_little_world_path %>">
    <code class="json-placeholder <%= 'hidden' %> <%= 'hidden' unless Rails.env.development? %>"><p></p></code>

    <div class="options-container" data-level="gender">
      <label>Gender</label>
      <div class="option" data-type="male"><i class="fa fa-mars"></i></div>
      <div class="option" data-type="female"><i class="fa fa-venus"></i></div>
    </div>
    <div class="options-container" data-level="gender">
      <label>Skin Tone</label>
      <div class="option" data-type="male"><i class="fa fa-mars"></i></div>
      <div class="option" data-type="female"><i class="fa fa-venus"></i></div>
    </div>

    <%= link_to "Randomize", "", class: "btn random-clothes" %>
  </div>
  <div class="half-container">
    <div class="character stand" data-from-json="<%= JSON.generate(@character.to_json) %>">
      <% if @character.present? %>
        <%= @character.to_html %>
      <% end %>
    </div>
  </div>
</div>
