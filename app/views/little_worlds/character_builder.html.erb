<% content_for :head do %>
  <%= stylesheet_link_tag 'individual/little_world/character', media: 'all' %>
  <%= stylesheet_link_tag 'individual/little_world/character_builder', media: 'all' %>
  <%= stylesheet_link_tag 'individual/little_world/character_sheet', media: 'all' %>
<% end %>

<div class="character-form-wrapper">
  <%= render partial: "character_form" %>
  <%= link_to "Randomize", "", class: "btn random-clothes" %>
  <br>
  <%= link_to "Save", "", class: "btn save-btn#{ ' disabled' unless user_signed_in? }" %>
  <%= link_to "Load", "", class: "btn load-btn#{ ' disabled' unless user_signed_in? }" %>
</div>

<div class="character-container">
  <div class="character stand">
    <%= @character.to_html %>
  </div>
  <ul class="instructions">
    <li>Arrow keys to move/change direction</li>
    <li><strong>A</strong> - Spell</li>
    <li><strong>S</strong> - Jab</li>
    <li><strong>D</strong> - Slash</li>
    <li><strong>F</strong> - Shoot</li>
    <li><strong>G</strong> - Die</li>
    <li><strong>X</strong> - cancel all queued movements</li>
  </ul>
  <!-- <code class="json-placeholder"><p><%= JSON.generate(@character.to_json) %></p></code> -->
</div>
