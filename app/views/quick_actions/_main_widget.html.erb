<% if widget.key?(:page) %>
  <a href="<%= widget[:page] %>" target="_blank" class="widget-holder">
    <div class="delete-widget hidden">❌</div>
    <div class="widget">
      <%= mrkdwn(widget[:name] || widget[:logo]) %>
    </div>
  </a>
<% else %>
  <div class="widget-holder">
    <div class="delete-widget hidden">❌</div>
    <div class="widget widget-modal" data-modal="<%= modal_id %>">
      <%= mrkdwn(widget[:name] || widget[:logo]) %>
    </div>
  </div>
<% end %>
