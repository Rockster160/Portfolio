<%= meta_title "Recipes", include_name: false %>

<div class="skinny-container lists-index-container">
  <div class="btn-container">
    <% if user_signed_in? %>
      <a href="<%= account_path %>" class="btn">Account</a>
      <a href="<%= new_recipe_path %>" class="btn pull-right">New Recipe +</a>
    <% else %>
      <a href="<%= login_path %>" class="btn">Sign In</a>
    <% end %>
  </div>
  <div class="lists-title">Recipes</div>
  <div class="lists">
    <div class="list-field">
      <%= text_field_tag "recipe[name]", "", class: "filterable", placeholder: "Search Recipes" %>
    </div>
    <% @recipes.each do |recipe| %>
      <div class="list-item-container" data-list-id="<%= recipe.id %>">
        <a href="<%= recipe_path(recipe) %>" class="list-item">
          <span class="item-name"><%= recipe.title %></span>
        </a>
      </div>
    <% end %>
  </div>
</div>
