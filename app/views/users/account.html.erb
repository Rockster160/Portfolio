  <%= form_for @user do |f| %>
    <%= hidden_field_tag :list_id, params[:list_id] %>
    <div class="form-title">Account</div>

    <%= render partial: 'layouts/error_container', locals: { resource: @user } %>

    <% if @user.guest? %>
      <p class="text-center">Please add a username and password in order to save your account.</p>
    <% end %>

    <div class="form-fields">
      <div class="form-field">
        <% if @user.guest? %>
          <%= f.label "Username *" %>
        <% else %>
          <%= f.label :username %>
        <% end %>
        <%= f.text_field :username %>
      </div>
      <div class="form-field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="form-field">
        <%= f.label :phone %>
        <%= f.telephone_field :phone %>
      </div>

      <div class="form-field text-center">
        <div class="checkbox-wrapper">
          <%= f.check_box :dark_mode %>
          <%= f.label :dark_mode do %>
            <div class="checkbox-placeholder"></div>
            Use dark mode?
          <% end %>
        </div>
      </div>

      <div class="change-password-fields" style="margin-top: 20px;">
        <p class="text-center">Use the fields below to change your password.</p>
        <% unless @user.guest? %>
          <div class="form-field">
            <%= f.label :current_password, "Current password *" %>
            <%= f.password_field :current_password %>
          </div>
        <% end %>
        <div class="form-field">
          <% if @user.guest? %>
            <%= f.label "Password *" %>
          <% else %>
            <%= f.label :password %>
          <% end %>
          <%= f.password_field :password %>
        </div>
        <div class="form-field">
          <% if @user.guest? %>
            <%= f.label "Password confirmation *" %>
          <% else %>
            <%= f.label :password_confirmation %>
          <% end %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
    </div>

    <div class="form-fields">
      <div class="form-field">
        <%= f.submit "Update", class: "wide" %>
      </div>
    </div>
  <% end %>

