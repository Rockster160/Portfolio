<input type="checkbox" id="list_item[<%= item.id %>]" class="list-item-checkbox" name="list_item[<%= item.id %>]" value="<%= item.name %>" data-destroy-url="<%= list_list_item_path(@list, item) %>" data-create-url="<%= list_list_items_path(@list) %>">
<label for="list_item[<%= item.id %>]" class="list-item">
  <div class="checkbox-wrapper"></div>
  <div class="item-name"><%= item.name %></div>
</label>
